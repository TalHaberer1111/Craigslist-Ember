{{#if updateListingForm}}
  <form>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title placeholder=listing.title}}
    </div>

    <div class="form-group">
      <label for="address">Address</label>
      {{input value=address placeholder=listing.address}}
    </div>

    <div class="form-group">
      <label for="city">City</label>
      {{input value=city placeholder=listing.city.name}}
    </div>

    <div class="form-group">
      <label for="cost">Cost</label>
      {{input value=cost placeholder=listing.cost}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category placeholder=listing.category}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date placeholder=listing.date}}
    </div>

    <button {{action 'updateListing' listing}}>Save</button>
    <button {{action 'cancelUpdateListing'}}>Cancel</button>
  </form>
  {{else}}

  <button {{action 'showUpdateListingForm'}}>Update</button>
  {{/if}}
